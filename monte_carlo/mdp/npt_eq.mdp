; Position-restrained initialization
; ============================================================

define                   = -DPOSRES

integrator               = md
dt                       = 0.010  ; 10 fs
nsteps                   = 20000  ; 200 ps

nstxout                  = 0
nstvout                  = 0
nstfout                  = 0
nstlog                   = 5000
nstenergy                = 5000
nstxout-compressed       = 10000
compressed-x-precision   = 100

cutoff-scheme            = Verlet
nstlist                  = 20
rlist                    = 1.35
verlet-buffer-tolerance  = -1
ns_type                  = grid
pbc                      = xyz

coulombtype              = reaction-field
rcoulomb                 = 1.1
epsilon_r                = 15
epsilon_rf               = 0

vdw_type                 = cutoff
vdw-modifier             = Potential-shift-verlet
rvdw                     = 1.1

tcoupl                   = v-rescale
tc-grps                  = Protein Non-Protein
nsttcouple               = 20
tau_t                    = 1.0 1.0
ref_t                    = 310 310

gen_vel                  = no

Pcoupl                   = c-rescale
Pcoupltype               = semiisotropic
nstpcouple               = 20
tau_p                    = 4.0
ref_p                    = 1.0 1.0
compressibility          = 3e-4 3e-4
refcoord_scaling         = all

constraints              = none
constraint_algorithm     = Lincs
lincs_order              = 8
lincs_warnangle          = 90
lincs_iter               = 2

comm-mode                = Linear
nstcomm                  = 100
comm-grps                = Protein Non-Protein
